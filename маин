import logging
from aiogram import Bot, Dispatcher, types
from aiogram.types import ReplyKeyboardMarkup, KeyboardButton
from aiogram.utils import executor

# –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –±–æ—Ç–∞
API_TOKEN = 'YOUR_BOT_TOKEN_HERE'
ADMIN_ID = 123456789  # –ó–∞–º–µ–Ω–∏—Ç–µ –Ω–∞ –≤–∞—à ID –∞–¥–º–∏–Ω–∞

# –ù–∞—Å—Ç—Ä–æ–π–∫–∞ –ª–æ–≥–∏—Ä–æ–≤–∞–Ω–∏—è
logging.basicConfig(level=logging.INFO)

# –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –±–æ—Ç–∞ –∏ –¥–∏—Å–ø–µ—Ç—á–µ—Ä–∞
bot = Bot(token=API_TOKEN)
dp = Dispatcher(bot)

# –°–æ–∑–¥–∞–Ω–∏–µ –∫–ª–∞–≤–∏–∞—Ç—É—Ä—ã
def get_main_keyboard():
    keyboard = ReplyKeyboardMarkup(
        resize_keyboard=True,
        row_width=2
    )
    
    buttons = [
        KeyboardButton("üé£ –í—Å–µ –∫–∞—Ç–µ–≥–æ—Ä–∏–∏"),
        KeyboardButton("üì¶ –ù–∞–ª–∏—á–∏–µ —Ç–æ–≤–∞—Ä–∞"),
        KeyboardButton("üè™ –û –º–∞–≥–∞–∑–∏–Ω–µ"),
        KeyboardButton("üë§ –ü—Ä–æ—Ñ–∏–ª—å"),
        KeyboardButton("üìú –ü—Ä–∞–≤–∏–ª–∞"),
        KeyboardButton("üÜò –ü–æ–º–æ—â—å"),
        KeyboardButton("‚öôÔ∏è —Å–µ—Ä–≤–∏—Å")
    ]
    
    keyboard.add(*buttons)
    return keyboard

# –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∫–æ–º–∞–Ω–¥—ã /start
@dp.message_handler(commands=['start'])
async def send_welcome(message: types.Message):
    user_id = message.from_user.id
    username = message.from_user.username
    
    # –û—Ç–ø—Ä–∞–≤–ª—è–µ–º —ç–º–æ–¥–∑–∏ üé£
    await message.answer("üé£")
    
    # –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –ø—Ä–∏–≤–µ—Ç—Å—Ç–≤–µ–Ω–Ω–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ
    welcome_text = (
        "üëã –î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å –≤ <b>FishingScamming Bot</b>! üé£\n\n"
        "–≠—Ç–æ –±–æ—Ç, –≤ –∫–æ—Ç–æ—Ä–æ–º –º–æ–∂–Ω–æ –ø—Ä–∏–æ–±—Ä–µ—Å—Ç–∏ —Ñ–∏—à–∏–Ω–≥-—Å—Å—ã–ª–∫–∏ –¥–ª—è –æ–±—Ä–∞–∑–æ–≤–∞—Ç–µ–ª—å–Ω—ã—Ö —Ü–µ–ª–µ–π –∏ —Ç–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏—è –±–µ–∑–æ–ø–∞—Å–Ω–æ—Å—Ç–∏.\n\n"
        "‚ö†Ô∏è <b>–í–Ω–∏–º–∞–Ω–∏–µ:</b> –ò—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ —Ñ–∏—à–∏–Ω–≥-—Å—Å—ã–ª–æ–∫ –≤ –º–æ—à–µ–Ω–Ω–∏—á–µ—Å–∫–∏—Ö —Ü–µ–ª—è—Ö –∑–∞–ø—Ä–µ—â–µ–Ω–æ –∑–∞–∫–æ–Ω–æ–º!\n"
        "–í—Å–µ –º–∞—Ç–µ—Ä–∏–∞–ª—ã –ø—Ä–µ–¥–Ω–∞–∑–Ω–∞—á–µ–Ω—ã —Ç–æ–ª—å–∫–æ –¥–ª—è –æ–±—É—á–µ–Ω–∏—è –∏ —Ç–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏—è –±–µ–∑–æ–ø–∞—Å–Ω–æ—Å—Ç–∏.\n\n"
        "üëá –ò—Å–ø–æ–ª—å–∑—É–π—Ç–µ –∫–Ω–æ–ø–∫–∏ –Ω–∏–∂–µ –¥–ª—è –Ω–∞–≤–∏–≥–∞—Ü–∏–∏:"
    )
    
    await message.answer(welcome_text, parse_mode='HTML', reply_markup=get_main_keyboard())
    
    # –£–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ –∞–¥–º–∏–Ω—É –æ –Ω–æ–≤–æ–º –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ
    if user_id != ADMIN_ID:
        admin_notification = (
            f"üÜï –ù–æ–≤—ã–π –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å:\n"
            f"ID: {user_id}\n"
            f"Username: @{username if username else '–ù–µ—Ç username'}\n"
            f"–ò–º—è: {message.from_user.first_name}"
        )
        await bot.send_message(ADMIN_ID, admin_notification)

# –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∫–Ω–æ–ø–∫–∏ "–í—Å–µ –∫–∞—Ç–µ–≥–æ—Ä–∏–∏"
@dp.message_handler(lambda message: message.text == "üé£ –í—Å–µ –∫–∞—Ç–µ–≥–æ—Ä–∏–∏")
async def all_categories(message: types.Message):
    await message.answer(
        "üìÅ <b>–ö–∞—Ç–µ–≥–æ—Ä–∏–∏ —Ç–æ–≤–∞—Ä–æ–≤:</b>\n\n"
        "üé£ –§–∏—à–∏–Ω–≥-—Å—Å—ã–ª–∫–∏\n"
        "üîë –õ–æ–≥–∏–Ω—ã/–ø–∞—Ä–æ–ª–∏\n"
        "üìß Email —à–∞–±–ª–æ–Ω—ã\n"
        "üåê –í–µ–±-—Å—Ç—Ä–∞–Ω–∏—Ü—ã\n"
        "üì± –ú–æ–±–∏–ª—å–Ω—ã–µ –≤–µ—Ä—Å–∏–∏\n"
        "üí≥ –ë–∞–Ω–∫–æ–≤—Å–∫–∏–µ —à–∞–±–ª–æ–Ω—ã\n\n"
        "–í—ã–±–µ—Ä–∏—Ç–µ –Ω—É–∂–Ω—É—é –∫–∞—Ç–µ–≥–æ—Ä–∏—é –¥–ª—è –ø—Ä–æ—Å–º–æ—Ç—Ä–∞ —Ç–æ–≤–∞—Ä–æ–≤.",
        parse_mode='HTML'
    )

# –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∫–Ω–æ–ø–∫–∏ "–ù–∞–ª–∏—á–∏–µ —Ç–æ–≤–∞—Ä–∞"
